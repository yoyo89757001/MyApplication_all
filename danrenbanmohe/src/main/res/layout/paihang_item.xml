<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1697d0"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="60px"
        android:textColor="#ffc801"
        android:id="@+id/text"
        android:gravity="center"
        android:textSize="70sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/ffrr"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </LinearLayout>

<LinearLayout
    android:id="@+id/ffrr"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="300px">

    <RelativeLayout
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:orientation="vertical"
        android:padding="50px"
        android:background="#ffc801"
        android:layout_width="match_parent"
        android:layout_height="260px">

        <ImageView
            android:id="@+id/touxiang3"
            android:layout_centerInParent="true"
            android:layout_width="160px"
            android:layout_height="160px" />

        <LinearLayout
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@+id/touxiang3"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yanzhi3"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="4px"
                android:id="@+id/nianling3"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <Button
            android:layout_toLeftOf="@+id/touxiang3"
            android:layout_marginRight="80px"
            android:layout_centerVertical="true"
            android:textSize="26sp"
            android:gravity="center"
            android:background="@drawable/xuhaodd"
            android:textColor="@color/white"
            android:id="@+id/xuhao1"
            android:layout_width="80px"
            android:layout_height="80px" />


    </RelativeLayout>

</LinearLayout>


</RelativeLayout>