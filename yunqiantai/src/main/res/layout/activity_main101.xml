<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/da_bg"
        android:src="@drawable/bg101"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.flexbox.FlexboxLayout
        app:flexWrap="nowrap"
        app:justifyContent="center"
        app:alignItems="center"
        app:flexDirection="row"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            app:layout_flexBasisPercent="15%"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>

        <com.google.android.flexbox.FlexboxLayout
            app:layout_flexBasisPercent="20%"
            app:flexDirection="column"
            app:justifyContent="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="0dp"
                app:layout_flexBasisPercent="70%"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/tq_101"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                            <LinearLayout
                                android:id="@+id/fgrtgfg"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <me.grantland.widget.AutofitTextView
                                    android:maxLines="1"
                                    autofit:minTextSize="10sp"
                                    android:id="@+id/xiaoshi"
                                    android:textSize="66sp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <me.grantland.widget.AutofitTextView
                                    android:maxLines="1"
                                    autofit:minTextSize="10sp"
                                    android:id="@+id/riqi"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:layout_below="@+id/xiaoshi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <me.grantland.widget.AutofitTextView
                                android:maxLines="2"
                                autofit:minTextSize="10sp"
                                android:textColor="@color/white"
                                android:layout_toRightOf="@+id/fgrtgfg"
                                android:id="@+id/xingqi"
                                android:ems="1"
                                android:layout_marginTop="14px"
                                android:layout_marginLeft="4px"
                                android:textSize="40sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#dbef24"
                        android:layout_weight="1.8"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/tianqi_im"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:textColor="@color/white"
                            android:textSize="34sp"
                            android:layout_centerVertical="true"
                            android:id="@+id/wendu"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="16dp"
                        android:background="#ee94fc"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:id="@+id/xingqi2"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/xingqi2"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/tianqi_im2"
                            android:layout_width="90px"
                            android:layout_height="90px" />


                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:id="@+id/wendu2"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="16dp"
                        android:background="#03b1f5"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:id="@+id/xingqi3"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_toRightOf="@+id/xingqi3"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/tianqi_im3"
                            android:layout_width="90px"
                            android:layout_height="90px" />

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:id="@+id/wendu3"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#5b59ff"
                        android:layout_weight="1.4"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">


                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:id="@+id/sssddd"
                            autofit:minTextSize="10sp"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:text="空气湿度"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            autofit:minTextSize="10sp"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/shidu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </com.google.android.flexbox.FlexboxLayout>


        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="60%"
            app:flexDirection="column"
            app:justifyContent="center"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:layout_flexBasisPercent="70%"
                app:cardElevation="8dp"
                app:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <megvii.testfacepass.camera.CameraPreview
                    android:id="@+id/preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.v7.widget.CardView>




        </com.google.android.flexbox.FlexboxLayout>

        <View
            app:layout_flexBasisPercent="15%"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>


    </com.google.android.flexbox.FlexboxLayout>



    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/touminglogo"
        android:layout_width="1dp"
        android:layout_height="1dp" />


    <me.grantland.widget.AutofitTextView
        android:maxLines="1"
        autofit:minTextSize="10sp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/zidongtext"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/heng_liebiao"
            app:flexDirection="row"
            app:justifyContent="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </com.google.android.flexbox.FlexboxLayout>



    <!--一个列表-->
    <android.support.v7.widget.CardView
        android:id="@+id/root_layout"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/vipbg101"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginRight="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/ghgh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        autofit:minTextSize="10sp"
                        android:textColor="@color/blake"
                        android:textSize="70sp"
                        android:gravity="center"
                        android:id="@+id/name"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/zidonghuoqu_fen"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/hg"
                            android:src="@drawable/yghghg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <me.grantland.widget.AutofitTextView
                            android:maxLines="1"
                            android:text="VIP"
                            android:layout_marginLeft="20dp"
                            autofit:minTextSize="10sp"
                            android:textColor="@color/blake"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>


                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:id="@+id/hyy"
                    android:layout_marginTop="30dp"
                    autofit:minTextSize="10sp"
                    android:textColor="@color/blake"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>



    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/ceshi"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />





</RelativeLayout>