<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/tools">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#edc920"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <View
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


       <megvii.testfacepass.utils.ScaleTextView
           android:layout_width="wrap_content"
           android:ems="1"
           android:layout_weight="6"
           android:text="广州瑞瞳智能科技有限公司"
           android:textSize="60sp"
           android:textColor="@color/white"
           android:id="@+id/companyName"
           android:layout_height="0dp" />


            <ImageView
                android:layout_weight="1"
                android:id="@+id/register_im"
                android:src="@drawable/dengji_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <megvii.testfacepass.camera.CameraPreview
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <megvii.testfacepass.view.MyTest
                android:id="@+id/mytest"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fgrtgfg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/xiaoshi"
                        android:textSize="66px"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/riqi"
                        android:textColor="@color/white"
                        android:textSize="24px"
                        android:layout_below="@+id/xiaoshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/fgrtgfg"
                    android:id="@+id/xingqi"
                    android:ems="1"
                    android:layout_marginTop="14px"
                    android:layout_marginLeft="4px"
                    android:textSize="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/tianqiRL"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/fgrt"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tianqi_im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        autofit:minTextSize="10sp"
                        android:id="@+id/tianqi"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:layout_weight="1"
                    autofit:minTextSize="12sp"
                    android:id="@+id/wendu"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:layout_weight="1"
                    autofit:minTextSize="12sp"
                    android:id="@+id/shidu"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <megvii.testfacepass.ljkplay.widget.media.IjkVideoView
                    android:layout_width="match_parent"
                    android:id="@+id/ijkplayview"
                    android:layout_height="match_parent">


                </megvii.testfacepass.ljkplay.widget.media.IjkVideoView>

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    app:indicator_width="6dp"
                    app:indicator_height="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bottom_ll"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <ImageView
        android:visibility="gone"
        android:background="#97262626"
        android:id="@+id/dabg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/top_ll"
        app:flexDirection="row"
        app:justifyContent="center"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </com.google.android.flexbox.FlexboxLayout>



</RelativeLayout>